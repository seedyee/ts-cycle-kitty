{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "outDir": "build/lib",
    "removeComments": false,
    "preserveConstEnums": true,
    "sourceMap": true,
    "declaration": true,
    "noImplicitAny": true,
    "strictNullChecks": true,
    "alwaysStrict": true,
    "suppressImplicitAnyIndexErrors": true,
    "lib": ["dom", "es6"]
  },
  "formatCodeOptions": {
    "indentSize": 2,
    "tabSize": 2
  },
  "files": [
    "client/index.ts"
  ]
}
